<Window
    x:Class="WindowTranslator.Modules.Validate.ValidateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowTranslator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ValidateDialog"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Margin="24">
        <Border Background="#88000000" CornerRadius="24">
            <Border.Effect>
                <BlurEffect Radius="24" />
            </Border.Effect>
        </Border>
        <Border Margin="24">
            <Grid>
                <ui:ProgressRing
                    Width="128"
                    Height="128"
                    IsIndeterminate="True" />
                <ContentPresenter x:Name="RootContentDialog" />
            </Grid>
        </Border>
    </Grid>
</Window>
