<Window x:Class="WindowTranslator.StartupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowTranslator"
        WindowStyle="ToolWindow"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d"
        Title="StartupDialog" >
    <Window.DataContext>
        <local:StartupViewModel/>
    </Window.DataContext>
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox MinWidth="240" Margin="4" Grid.Row="0" Grid.Column="0" ItemsSource="{Binding ProcessInfos}" DisplayMemberPath="Title" SelectedValuePath="WindowHandle" SelectedValue="{Binding SelectedWindowHandle}" />
        <Button MinWidth="40" Margin="4" Content="R" Grid.Column="1" Grid.Row="0" Command="{Binding RefreshProcessCommand}"/>
        <Button Margin="4" Content="Attach" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Command="{Binding RunCommand}" />
    </Grid>
</Window>
