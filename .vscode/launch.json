{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/WindowTranslator/bin/Debug/WindowTranslator.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "C#: WindowTranslator Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/WindowTranslator/WindowTranslator.csproj",
            "preLaunchTask": "build",
        },
        {
            "name": ".NET Core Launch (Linux)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:linux",
            "program": "${workspaceFolder}/WindowTranslator.Linux/bin/Debug/WindowTranslator.Linux.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WindowTranslator",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (Macos)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:macos",
            "program": "${workspaceFolder}/WindowTranslator.Macos/bin/Debug/WindowTranslator.Macos.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WindowTranslator",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Sandbox ClipTextRect",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-sandbox",
            "program": "${workspaceFolder}/Sandbox/bin/Debug/Sandbox.exe",
            "args": [
                "ClipTextRect",
                "${input:imagePath}"
            ],
            "cwd": "${workspaceFolder}/Sandbox",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ],
    "inputs": [
        {
            "id": "imagePath",
            "description": "画像ファイルのパスを入力してください",
            "default": "C:\\path\\to\\your\\image.jpg",
            "type": "promptString"
        }
    ]
}